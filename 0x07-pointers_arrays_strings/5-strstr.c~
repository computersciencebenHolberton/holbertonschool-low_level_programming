#include "holberton.h"

/**
 * main - check the code for Holberton School students.
 *
 * Return: Always 0.
 */
char *_strstr(char *haystack, char *needle)
{
if (*needle == '\0')
return (haystack);
while (*haystack != '\0')
{
if (*haystack == *needle)
{
return (haystack);
}
haystack++;
}
if (*haystack == *needle)
{
return (haystack);
}
return (0);
}
